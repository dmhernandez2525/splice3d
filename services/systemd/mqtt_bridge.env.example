# Splice3D MQTT Bridge Environment Configuration
# Copy this file to /etc/splice3d/mqtt_bridge.env and update values

# Serial port configuration
SPLICE3D_SERIAL_PORT=/dev/ttyUSB0
SPLICE3D_SERIAL_BAUD=115200

# MQTT broker configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=splice3d
MQTT_PASSWORD=your_mqtt_password_here

# Statistics file location
SPLICE3D_STATS_FILE=/var/lib/splice3d/stats.json
