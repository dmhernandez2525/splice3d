# Splice3D - Environment Variables
# ================================
# Copy this file to .env and update values as needed.

# Serial Communication
SERIAL_PORT=/dev/ttyACM0
SERIAL_BAUD_RATE=115200

# Machine Configuration
EXTRUDER_STEPS_PER_MM=400
WELD_TEMPERATURE=230
WELD_DURATION_MS=2000

# Filament Defaults
DEFAULT_FILAMENT_DIAMETER=1.75
DEFAULT_PURGE_LENGTH=50

# CLI Configuration
DEBUG_MODE=false
LOG_LEVEL=INFO

# API Server (if deployed)
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-api-key-here
MAX_UPLOAD_SIZE_MB=50
CORS_ORIGINS=*

# GUI Configuration
GUI_THEME=dark
GUI_WINDOW_WIDTH=1200
GUI_WINDOW_HEIGHT=800
